{
    "version": 2,
    "builds": [
      {
        "src": "frontend",
        "use": "@vercel/static-build",
        "config": {
          "projectType": "react",
          "buildCommand": "npm run build",
          "outputDirectory": "build"
        }
      },
      {
        "src": "backend/index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"], "dest": "backend/index.js" },
      { "src": "/api/(.*)", "methods": ["OPTIONS"], "dest": "backend/index.js", "headers": {
        "Access-Control-Allow-Origin": "https://ai-resume-builder-sand-nu.vercel.app",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization",
        "Access-Control-Allow-Credentials": "true"
      }},
      { "src": "/(.*)", "dest": "frontend/build/index.html" }
    ]
  }