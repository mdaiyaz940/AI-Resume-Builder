{
    "version": 2,
    "builds": [
      {
        "src": "frontend",
        "use": "@vercel/static-build",
        "config": {
          "projectType": "react",
          "buildCommand": "npm run build",
          "outputDirectory": "build"
        }
      },
      {
        "src": "backend/index.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "backend/index.js" },
      { "src": "/(.*)", "dest": "frontend/build/index.html" }
    ]
  }